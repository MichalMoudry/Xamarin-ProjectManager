<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectManager.Views.ProjectPageTabs.OverviewTab"
             Title="Overview">
    
    <StackLayout BackgroundColor="#395a73">

        <Frame x:Name="pageTitleFrame" BackgroundColor="#2c4659" Margin="0,15,0,0">
            <Label x:Name="pageTitle" TextColor="White" Font="Bold, 26" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
        </Frame>

        <Label x:Name="projectDataDisplay" TextColor="White" FontSize="16" />

        <Label Text="Progress:" TextColor="White" FontSize="16" Margin="0,10,0,0" />
        <ProgressBar x:Name="projectProgress" />

        <Button x:Name="viewDiagramButton" Text="View diagram" HorizontalOptions="Center" Margin="0,10,0,0" WidthRequest="135" HeightRequest="45" BackgroundColor="#2a4254" TextColor="White" />

        <Button x:Name="backButton" Clicked="backButton_Click" HorizontalOptions="Center" Margin="0,10,0,0" Text="Back" WidthRequest="135" HeightRequest="45" BackgroundColor="#2a4254" TextColor="White" />

    </StackLayout>

</ContentPage>