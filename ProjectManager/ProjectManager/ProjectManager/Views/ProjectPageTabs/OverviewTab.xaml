<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectManager.Views.ProjectPageTabs.OverviewTab"
             Title="Overview"
             BackgroundColor="#395a73">
    <StackLayout>

        <Frame BackgroundColor="#2c4659" Margin="0,15,0,0">
            <Label x:Name="projectName" TextColor="White" Font="Bold, 26" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
        </Frame>

        <Label x:Name="projData" TextColor="White" FontSize="16" />

        <Label TextColor="White" FontSize="18" x:Name="taskStateLabel" Margin="0,5,0,0" />
        <ProgressBar x:Name="projectState" />

        <Button x:Name="backButton" Text="Back" Clicked="backButton_Clicked" HorizontalOptions="Center" BackgroundColor="#2a4254" TextColor="White" WidthRequest="135" HeightRequest="45" />

    </StackLayout>
</ContentPage>