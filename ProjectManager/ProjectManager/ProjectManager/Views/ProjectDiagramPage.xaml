<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectManager.Views.ProjectDiagramPage"
             Title="ProjectDiagramPage">

    <ScrollView>
        
        <StackLayout BackgroundColor="#395a73">
            <Frame x:Name="pageTitleFrame" BackgroundColor="#2c4659" Margin="0,15,0,0">
                <Label Text="Project diagram" TextColor="White" Font="Bold, 26" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
            </Frame>

            <Label x:Name="projectDataDisplay" Margin="10,0,0,0" TextColor="White" FontAttributes="Bold" FontSize="17" />

            <ScrollView Orientation="Both">
                <Grid x:Name="diagram" Margin="0,10,0,0">
                </Grid>
            </ScrollView>

            <Button x:Name="backButton" Clicked="backButton_Clicked" HorizontalOptions="Center" Margin="0,10,0,0" Text="Back" WidthRequest="135" HeightRequest="45" BackgroundColor="#2a4254" TextColor="White" />
        </StackLayout>

    </ScrollView>

</ContentPage>